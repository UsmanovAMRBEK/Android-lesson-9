<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:backgroundTint="@color/white"
    tools:context=".CheckEmail">
    <TextView
        android:id="@+id/tv_singup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check your Mail"
        android:textSize="32sp"
        android:fontFamily="@font/gilroy_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0"
        />
    <TextView
        android:id="@+id/tv_check_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0.18"
        android:paddingRight="8dp"
        android:text="We,ve sent a 6-digit confirmation code to banstolakiran11@gmail.com. Make sure you enter correct code."
        />
    <LinearLayout
        android:id="@+id/ly_check_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.35"
        android:weightSum="6"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="47dp"
            android:layout_height="65dp"
            app:cardBackgroundColor="#CDCED1"
            android:layout_marginHorizontal="6dp"
            app:cardCornerRadius="6dp"
            android:layout_weight="1"
            >
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="47dp"
            android:layout_height="65dp"
            app:cardBackgroundColor="#CDCED1"
            android:layout_marginHorizontal="6dp"
            app:cardCornerRadius="6dp"
            android:layout_weight="1"
            >
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="47dp"
            android:layout_height="65dp"
            app:cardBackgroundColor="#CDCED1"
            android:layout_marginHorizontal="6dp"
            app:cardCornerRadius="6dp"
            android:layout_weight="1"
            >
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="47dp"
            android:layout_height="65dp"
            app:cardBackgroundColor="#CDCED1"
            android:layout_marginHorizontal="6dp"
            app:cardCornerRadius="6dp"
            android:layout_weight="1"
            >
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="47dp"
            android:layout_height="65dp"
            app:cardBackgroundColor="#CDCED1"
            android:layout_marginHorizontal="6dp"
            app:cardCornerRadius="6dp"
            android:layout_weight="1"
            >
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="47dp"
            android:layout_height="65dp"
            app:cardBackgroundColor="#CDCED1"
            android:layout_marginHorizontal="6dp"
            app:cardCornerRadius="6dp"
            android:layout_weight="1"
            >
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly_check_numbers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:background="@drawable/bg_btn_login"
        android:text="Verify"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_check_desc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didnâ€™t recieve code?"
        android:textColor="#747980"
        app:layout_constraintTop_toBottomOf="@id/btn_verify"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintHorizontal_bias="0.3"
        android:fontFamily="@font/gilroy_medium"
        />
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend Code"
        android:textColor="#2805FF"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_verify"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_check_desc2"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintHorizontal_bias="0.4"
        android:fontFamily="@font/gilroy_medium"
        />


</androidx.constraintlayout.widget.ConstraintLayout>