<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:backgroundTint="@color/white"
    tools:context=".SingUp">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="34dp"
        android:layout_height="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="52dp"
        android:src="@drawable/arrow_left"
        />
    <TextView
        android:id="@+id/tv_singup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SingUp"
        android:textSize="32sp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/gilroy_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:textSize="14sp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/gilroy_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/et_fname"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:hint="Your First Name"
        android:textColorHint="#747980"
        app:layout_constraintTop_toBottomOf="@id/tv_fname"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_edit_text"
        />

    <TextView
        android:id="@+id/tv_lname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:fontFamily="@font/gilroy_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_fname" />
    <EditText
        android:id="@+id/et_lname"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:hint="Your Last Name"
        android:textColorHint="#747980"
        app:layout_constraintTop_toBottomOf="@id/tv_lname"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_edit_text"
        />
    <TextView
        android:id="@+id/tv_sp_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_text2"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/gilroy_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_lname" />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_mail"
        android:layout_marginTop="18dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sp_email"
        app:layout_constraintStart_toStartOf="@id/tv_sp_email"
        android:translationZ="1dp"
        />
    <EditText
        android:id="@+id/et_sp_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="8dp"
        android:hint="Your Email"
        android:textColorHint="#747980"
        app:layout_constraintTop_toBottomOf="@id/tv_sp_email"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_edit_text"
        />

    <TextView
        android:id="@+id/tv_sp_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_text3"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/gilroy_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_sp_email" />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/lock"
        android:layout_marginTop="18dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sp_password"
        app:layout_constraintStart_toStartOf="@id/tv_sp_password"
        android:translationZ="1dp"
        />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/eye_off"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sp_password"
        app:layout_constraintEnd_toEndOf="@id/et_sp_password"
        android:translationZ="1dp"
        />
    <EditText
        android:id="@+id/et_sp_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="8dp"
        android:hint="Your Password"
        android:textColorHint="#747980"
        app:layout_constraintTop_toBottomOf="@id/tv_sp_password"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_edit_text"
        android:inputType="textPassword"
        />
    <TextView
        android:id="@+id/tv_singup_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By signing up you agree to our Terms &amp; Condition and Privacy Policy.*"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_sp_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:fontFamily="@font/gilroy_medium"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_singup_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_singup_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:background="@drawable/bg_btn_login"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_already_singup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already signed up ?"
        android:textColor="#747980"
        app:layout_constraintTop_toBottomOf="@id/btn_singup_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintHorizontal_bias="0.4"
        android:fontFamily="@font/gilroy_medium"
        />
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#2805FF"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_singup_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_already_singup"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintHorizontal_bias="0.4"
        android:fontFamily="@font/gilroy_medium"
        />


</androidx.constraintlayout.widget.ConstraintLayout>